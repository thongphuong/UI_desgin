<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/CadetBlue"
    tools:context=".ThiTruong">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLine">

            <LinearLayout
                android:paddingLeft="-30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="106dp"
                    android:layout_height="60dp"
                    android:src="@drawable/back2" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="ĐẤU TRƯỜNG"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="30dp">
                </TextView>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">
            <Button
                android:textStyle="bold"
                android:id="@+id/btn_thongtinhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin hạng"/>

            <Button
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_lichsuchoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử chơi"/>

            <Button
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_capdonhanthuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cấp độ nhận thưởng"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:weightSum="90"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_computer"
                    android:src="@drawable/computer"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/rank"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/people"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>